{
  "compilerOptions": {
    "target": "es6",    /* es5 = function 유지, es6 = 화살표 함수 유지 */         
    "module": "commonjs",   /* commonjs = export.default Sample, es2015 = export default Sample */
    "jsx": "react",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true,
    "outDir": "./dist",
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
